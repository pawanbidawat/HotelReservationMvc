@model HotelReservation.Models.DTO.HotelRoomModel

@{
    ViewData["Title"] = "AddRoomDisplay";
}

<h1>AddRoomDisplay</h1>

<h4>HotelRoomModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoom" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
            <div class="form-group">
                <label asp-for="RoomType" class="control-label"></label>
                <input asp-for="RoomType" class="form-control" />
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">       
                <label asp-for="RoomImageFile" class="control-label"></label>
                <input asp-for="RoomImageFile" type="file" class="form-control" />
                <span asp-validation-for="RoomImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
              
                <input asp-for="HotelId" value="@ViewData["HotelId"]" name="HotelId" type="hidden" />
             
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

